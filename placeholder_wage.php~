<?php

include('connect.php');

$id = $_GET['id'];

$sql = "SELECT wage FROM employeer WHERE id=$id";
$result = $conn->query($sql);

if ($result->num_rows > 0) {
    // output data of each row
    while($row = $result->fetch_assoc()) {
        echo $row['wage'];
    }
}
else {
    echo "0 results";
}
$conn->close();
